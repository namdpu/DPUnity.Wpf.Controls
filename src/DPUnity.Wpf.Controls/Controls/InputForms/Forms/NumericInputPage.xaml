<wd:DPage x:Class="DPUnity.Wpf.Controls.Controls.InputForms.Forms.NumericInputPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.InputForms.Forms"
          xmlns:wd="https://dpunity.com/dev/wpf/windows"
          xmlns:hc="https://handyorg.github.io/handycontrol"
          xmlns:cvt="clr-namespace:DPUnity.Wpf.Controls.Converters"
          mc:Ignorable="d"
          d:DesignHeight="200"
          d:DesignWidth="400">
    <Page.Resources>
        <cvt:BooleanToHiddenVisibilityConverter x:Key="BooleanToHiddenVisibilityConverter" />
    </Page.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding RangeDisplayText}"
                   FontSize="11"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0 5 0 2"
                   Visibility="{Binding HasValidationRange, Converter={StaticResource BooleanToHiddenVisibilityConverter}}" />

        <hc:TextBox Grid.Row="1"
                    x:Name="NumericTextBox"
                    Style="{DynamicResource TextBoxExtend}"
                    Height="28">
            <hc:TextBox.Text>
                <Binding UpdateSourceTrigger="PropertyChanged" Path="Text">
                    <Binding.ValidationRules>
                        
                    </Binding.ValidationRules>
                </Binding>
            </hc:TextBox.Text>
        </hc:TextBox>
        <hc:UniformSpacingPanel Spacing="10"
                                Orientation="Horizontal"
                                Grid.Row="2"
                                HorizontalAlignment="Right"
                                Margin=" 0 0 0 10">
            <Button Content="OK"
                    Width="75"
                    IsDefault="True"
                    Command="{Binding SubmitCommand}" />
            <Button Content="Cancel"
                    Width="75"
                    IsCancel="True"
                    Style="{DynamicResource ButtonDanger}"
                    Command="{Binding CancelCommand}" />
        </hc:UniformSpacingPanel>
    </Grid>
</wd:DPage>