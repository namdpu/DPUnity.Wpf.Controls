<wd:ProcessPage x:Class="DPUnity.Wpf.Controls.Controls.InputForms.Forms.ProcessPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.InputForms.Forms"
                xmlns:wd="https://dpunity.com/dev/wpf/windows"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:hc="https://handyorg.github.io/handycontrol"
                mc:Ignorable="d"
                d:DesignHeight="100"
                d:DesignWidth="800"
                Title="ProcessPage">

    <Grid Margin="10 5 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <hc:UniformSpacingPanel Grid.Row="0"
                                Orientation="Vertical"
                                Spacing="10">
            <StackPanel>
                <DockPanel>
                    <TextBlock HorizontalAlignment="Left"
                               TextWrapping="NoWrap"
                               TextTrimming="CharacterEllipsis"
                               Margin="0 0 0 3">
                        <Run Text="(" />
                        <Run Text="{Binding Value}" />
                        <Run Text="/" />
                        <Run Text="{Binding Maximum}" />
                        <Run Text=" items) " />
                        <Run Text="{Binding Header}" />
                    </TextBlock>

                    <TextBlock Text="[Level 1]"
                               DockPanel.Dock="Right"
                               Margin="10 0 0 3"
                               HorizontalAlignment="Right" />
                </DockPanel>

                <Border BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ProgressBar x:Name="Progress"
                                 Value="{Binding Percent}"
                                 Maximum="100"
                                 Minimum="0"
                                 Grid.ColumnSpan="2" />
                </Border>
            </StackPanel>


            <Expander Visibility="{Binding ExpanderVisibility}"
                      Header="Details"
                      IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
                <Border BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="0 0 4 4">
                    <StackPanel Margin="10">
                        <StackPanel Visibility="{Binding Progress2Visibility}"
                                    Margin="0 0 0 5">
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0 0 0 3">
                                    <Run Text="(" />
                                    <Run Text="{Binding Value2}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding Maximum2}" />
                                    <Run Text=" items)" />
                                    <Run Text="{Binding Header2}" />
                                </TextBlock>


                                <TextBlock Text="[Level 2]"
                                           Margin="10 0 0 3"
                                           DockPanel.Dock="Right"
                                           HorizontalAlignment="Right" />
                            </DockPanel>
                            
                            <Border BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <ProgressBar x:Name="Progress2"
                                             Value="{Binding Percent2}"
                                             Maximum="100"
                                             Minimum="0"
                                             Grid.ColumnSpan="2" />
                            </Border>
                        </StackPanel>

                        <StackPanel Visibility="{Binding Progress3Visibility}">
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           TextWrapping="NoWrap"
                                           Margin="0 0 0 3"
                                           TextTrimming="CharacterEllipsis">
                                    <Run Text="(" />
                                    <Run Text="{Binding Value3}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding Maximum3}" />
                                    <Run Text=" items) " />
                                    <Run Text="{Binding Header3}" />
                                </TextBlock>

                                <TextBlock Text="[Level 3]"
                                           Margin="10 0 0 3"
                                           DockPanel.Dock="Right"
                                           HorizontalAlignment="Right" />
                            </DockPanel>
                            <Border BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <ProgressBar x:Name="Progress3"
                                             Value="{Binding Percent3}"
                                             Maximum="100"
                                             Minimum="0"
                                             Grid.ColumnSpan="2" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Expander>
        </hc:UniformSpacingPanel>

        <DockPanel VerticalAlignment="Center"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   KeyboardNavigation.TabNavigation="Cycle"
                   Background="Red">
            <Button  Content="Cancel"
                     IsDefault="True"
                     x:Name="CancelButton"
                     Command="{Binding CancelCommand}"
                     Style="{DynamicResource ButtonDanger}"
                     Width="80"
                     Height="28"
                     Panel.ZIndex="1"
                     Margin="0 -70 10 5" />
        </DockPanel>
    </Grid>
</wd:ProcessPage>
