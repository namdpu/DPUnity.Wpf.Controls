<Window x:Class="DPUnity.Wpf.Controls.Controls.DialogService.Views.DPDialogWindowUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.DialogService.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        MinHeight="100"
        MaxHeight="600"
        ResizeMode="CanResize"
        MinWidth="300"
        MaxWidth="1000"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border x:Name="MainBorder"  
            Background="Transparent"
            CornerRadius="15"
            ClipToBounds="True">
        <Frame x:Name="MainFrame"
               Margin="1"
               Background="Transparent"
               Style="{DynamicResource DP_ContentFrame}">
            <!--<Frame.Background>
                <SolidColorBrush Color="{DynamicResource SecondaryRegionColor}"
                                 Opacity="0.7" />
            </Frame.Background>-->
        </Frame>
    </Border>
</Window>