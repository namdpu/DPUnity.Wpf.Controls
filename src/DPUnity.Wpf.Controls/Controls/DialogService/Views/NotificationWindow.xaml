<Window x:Class="DPUnity.Wpf.Controls.Controls.DialogService.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.DialogService.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:icons="https://dpunity.com/dev/wpf/ui/controls/packicon"
        mc:Ignorable="d"
        Width="350"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        SizeToContent="Height"
        Topmost="True"
        MaxHeight="200"
        MinHeight="200">
    <Window.Resources>
        <Color x:Key="AskColor">#8a2ce2</Color>
        <SolidColorBrush x:Key="AskBrush"
                         Color="{DynamicResource AskColor}" />
    </Window.Resources>
    <Border CornerRadius="10"
            BorderThickness="1"
            Background="{DynamicResource SecondaryRegionBrush}"
            Opacity="0.95"
            BorderBrush="{DynamicResource BorderBrush}"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Rectangle x:Name="BackgroundOverlay"
                       Grid.RowSpan="3"
                       Opacity="0.2" />
            <Grid Grid.Row="0"
                  Margin="10 10 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleText"
                           Text="Title"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="280"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Grid.Column="0" />
                <Button x:Name="CloseButton"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Margin="0 -10 0 0"
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="Transparent">
                                <icons:PackIcon x:Name="Cross"
                                                Kind="Close"
                                                Foreground="{DynamicResource DangerBrush}"
                                                Height="18"
                                                Width="18" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="Cross"
                                            Property="Opacity"
                                            Value="0.8" />
                                </Trigger>
                                <Trigger Property="IsPressed"
                                         Value="True">
                                    <Setter TargetName="Cross"
                                            Property="Opacity"
                                            Value="0.6" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="1"
                  Margin="10 5">
                <icons:PackIcon x:Name="NotificationIcon"
                                Kind="Information"
                                Width="100"
                                Height="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Opacity="0.15" />
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="Message"
                               Text="This is a notification message."
                               TextWrapping="Wrap"
                               HorizontalAlignment="Left"
                               FontSize="16"
                               Foreground="{DynamicResource SecondaryTextBrush}" />
                </ScrollViewer>
            </Grid>
            <hc:UniformSpacingPanel Orientation="Horizontal"
                                    Grid.Row="2"
                                    HorizontalAlignment="Right"
                                    Spacing="10"
                                    Margin="0 0 20 10">
                <Button x:Name="OKButton"
                        Width="80"
                        Content="OK"
                        Visibility="Collapsed"
                        Style="{DynamicResource ButtonPrimary}"
                        Click="OKButton_Click" />
                <Button x:Name="CancelButton"
                        Width="80"
                        Content="No"
                        Style="{DynamicResource ButtonDanger}"
                        Visibility="Collapsed"
                        Click="CancelButton_Click" />
            </hc:UniformSpacingPanel>
        </Grid>
    </Border>
</Window>