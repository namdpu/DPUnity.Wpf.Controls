<Window x:Class="DPUnity.Wpf.Controls.Controls.DialogService.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.DialogService.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:icons="https://dpunity.com/dev/wpf/ui/controls/packicon"
        mc:Ignorable="d"
        Height="250"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        SizeToContent="Height"
        Topmost="True"
        MaxHeight="500">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DPUnity.WPF.UI;component/Styles/HandyResources.xaml" />
                <ResourceDictionary Source="/DPUnity.WPF.UI;component/Styles/DPUnityResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="5"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource SecondaryRegionBrush}"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <!-- Added MouseLeftButtonDown event here -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--header-->
            <hc:SimpleStackPanel Grid.Row="0"
                                 Orientation="Horizontal"
                                 Margin="10">
                <Image Source="/DPUnity.Wpf.UI;component/Resources/Icon/logodp.ico"
                       Height="14"
                       Width="14" />
                <TextBlock Text="DPUnity"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}" />
            </hc:SimpleStackPanel>
            <Button x:Name="CloseButton"
                    Width="20"
                    Height="20"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="20 0"
                    Click="CloseButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="2">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <icons:PackIcon x:Name="Cross"
                                            Kind="Close"
                                            Foreground="{DynamicResource DangerBrush}"
                                            Height="15"
                                            Width="15" />
                        </Grid>
                        <!-- Trigger hiệu ứng hover -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Cross"
                                        Property="Opacity"
                                        Value="0.8" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="Cross"
                                        Property="Opacity"
                                        Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--end of header-->
            <!--Title-->
            <TextBlock x:Name="TitleText"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Text="Title"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextBrush}" />
            <!--Message-->

            <DockPanel LastChildFill="True"
                       Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Margin="20 0">

                <icons:PackIcon x:Name="NotificationIcon"
                                Kind="Information"
                                Width="16"
                                Height="16"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Margin="10 0 10 0"
                                Foreground="{DynamicResource InfoBrush}" />
                <hc:ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="Message"
                               Text="This is a notification message."
                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Margin="10"
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryTextBrush}" />
                </hc:ScrollViewer>
            </DockPanel>
            <!--Buttons-->
            <hc:UniformSpacingPanel Orientation="Horizontal"
                                    Grid.Column="1"
                                    Grid.Row="3"
                                    HorizontalAlignment="Right"
                                    Spacing="10"
                                    Margin="0 0 20 10">
                <Button x:Name="OKButton"
                        Width="80"
                        Content="OK"
                        Style="{DynamicResource ButtonPrimary}"
                        Click="OKButton_Click" />
                <Button x:Name="CancelButton"
                        Width="80"
                        Content="No"
                        Style="{DynamicResource ButtonDanger}"
                        Visibility="Collapsed"
                        Click="CancelButton_Click" />
            </hc:UniformSpacingPanel>
        </Grid>
    </Border>
</Window>