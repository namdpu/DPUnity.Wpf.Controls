<UserControl x:Class="DPUnity.Wpf.Controls.Controls.ColorPickers.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="https://dpunity.com/dev/wpf/ui/controls/packicon"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             d:DesignHeight="350"
             d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="ColorSwatchStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="20" />
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Margin"
                    Value="2" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource BorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="White" />
                    <Setter Property="BorderThickness"
                            Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SliderStyle"
               TargetType="Slider">
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="Margin"
                    Value="5,2" />
        </Style>
    </UserControl.Resources>
    <Border CornerRadius="15"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource SecondaryRegionBrush}">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Color Canvas Area -->
            <Grid Grid.Row="0"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <!-- Main Color Canvas -->
                <Canvas x:Name="ColorCanvas"
                        Grid.Column="0"
                        Background="Black"
                        MouseLeftButtonDown="ColorCanvas_MouseLeftButtonDown"
                        MouseMove="ColorCanvas_MouseMove"
                        MouseLeftButtonUp="ColorCanvas_MouseLeftButtonUp">
                    <!-- White to transparent gradient (horizontal) -->
                    <Rectangle Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,0">
                                <GradientStop Color="White"
                                              Offset="0" />
                                <GradientStop Color="Transparent"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <!-- Black to transparent gradient (vertical) -->
                    <Rectangle Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="0,1">
                                <GradientStop Color="Transparent"
                                              Offset="0" />
                                <GradientStop Color="Black"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <!-- Color selector crosshair -->
                    <Ellipse x:Name="ColorSelector"
                             Width="10"
                             Height="10"
                             Stroke="White"
                             StrokeThickness="2"
                             Canvas.Left="0"
                             Canvas.Top="0" />
                </Canvas>
                <!-- Hue Slider -->
                <Canvas x:Name="HueCanvas"
                        Grid.Column="1"
                        Margin="5,0"
                        MouseLeftButtonDown="HueCanvas_MouseLeftButtonDown"
                        MouseMove="HueCanvas_MouseMove"
                        MouseLeftButtonUp="HueCanvas_MouseLeftButtonUp">
                    <Rectangle Width="20"
                               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="0,1">
                                <GradientStop Color="#FF0000"
                                              Offset="0" />
                                <GradientStop Color="#FFFF00"
                                              Offset="0.17" />
                                <GradientStop Color="#00FF00"
                                              Offset="0.33" />
                                <GradientStop Color="#00FFFF"
                                              Offset="0.5" />
                                <GradientStop Color="#0000FF"
                                              Offset="0.67" />
                                <GradientStop Color="#FF00FF"
                                              Offset="0.83" />
                                <GradientStop Color="#FF0000"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle x:Name="HueSelector"
                               Width="24"
                               Height="4"
                               Fill="White"
                               Stroke="Black"
                               StrokeThickness="1"
                               Canvas.Left="-2"
                               Canvas.Top="0" />
                </Canvas>
                <!-- Alpha Slider -->
                <Canvas x:Name="AlphaCanvas"
                        Grid.Column="2"
                        Margin="5,0"
                        MouseLeftButtonDown="AlphaCanvas_MouseLeftButtonDown"
                        MouseMove="AlphaCanvas_MouseMove"
                        MouseLeftButtonUp="AlphaCanvas_MouseLeftButtonUp">
                    <!-- Checkerboard background for transparency -->
                    <Rectangle Width="20"
                               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}">
                        <Rectangle.Fill>
                            <DrawingBrush Viewport="0,0,8,8"
                                          ViewportUnits="Absolute"
                                          TileMode="Tile">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="White">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="0,0,8,8" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                            <GeometryDrawing.Geometry>
                                                <GeometryGroup>
                                                    <RectangleGeometry Rect="0,0,4,4" />
                                                    <RectangleGeometry Rect="4,4,4,4" />
                                                </GeometryGroup>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle x:Name="AlphaGradient"
                               Width="20"
                               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="0,1">
                                <GradientStop x:Name="AlphaGradientTop"
                                              Color="Black"
                                              Offset="0" />
                                <GradientStop x:Name="AlphaGradientBottom"
                                              Color="Transparent"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle x:Name="AlphaSelector"
                               Width="24"
                               Height="4"
                               Fill="White"
                               Stroke="Black"
                               StrokeThickness="1"
                               Canvas.Left="-2"
                               Canvas.Top="0" />
                </Canvas>
            </Grid>
            <!-- Current Color Display -->
            <Grid Grid.Row="1"
                  Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Height="60">
                    <!-- Checkerboard background -->
                    <Border.Background>
                        <DrawingBrush Viewport="0,0,8,8"
                                      ViewportUnits="Absolute"
                                      TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="White">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,8,8" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                    <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                        <GeometryDrawing.Geometry>
                                            <GeometryGroup>
                                                <RectangleGeometry Rect="0,0,4,4" />
                                                <RectangleGeometry Rect="4,4,4,4" />
                                            </GeometryGroup>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                    <Rectangle x:Name="CurrentColorDisplay"
                               Fill="Black" />
                </Border>
                <!-- Color Values -->
                <StackPanel Grid.Column="1">
                    <StackPanel Margin="10,5"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <!-- RGBA Mode Grid -->
                        <Grid x:Name="RgbaGrid"
                              Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="R:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="RedTextBox"
                                     Grid.Column="1"
                                     Text="0"
                                     TextChanged="ColorTextBox_TextChanged"
                                     MaxLength="3" />
                            <TextBlock Grid.Column="2"
                                       Text="G:"
                                       VerticalAlignment="Center"
                                       Margin="10,0,5,0" />
                            <TextBox x:Name="GreenTextBox"
                                     Grid.Column="3"
                                     Text="0"
                                     TextChanged="ColorTextBox_TextChanged"
                                     MaxLength="3" />
                            <TextBlock Grid.Column="4"
                                       Text="B:"
                                       VerticalAlignment="Center"
                                       Margin="10,0,5,0" />
                            <TextBox x:Name="BlueTextBox"
                                     Grid.Column="5"
                                     Text="0"
                                     TextChanged="ColorTextBox_TextChanged"
                                     MaxLength="3" />
                            <TextBlock Grid.Column="6"
                                       Text="A:"
                                       VerticalAlignment="Center"
                                       Margin="10,0,5,0" />
                            <TextBox x:Name="AlphaTextBox"
                                     Grid.Column="7"
                                     Text="255"
                                     TextChanged="ColorTextBox_TextChanged"
                                     MaxLength="3" />
                        </Grid>
                        <!-- HEX Mode Grid -->
                        <Grid x:Name="HexGrid"
                              Visibility="Collapsed"
                              Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="205" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="HEX:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="HexTextBox"
                                     Grid.Column="1"
                                     Text="#FF000000"
                                     TextChanged="HexTextBox_TextChanged"
                                     MaxLength="9" />
                        </Grid>
                        <!-- Toggle Button -->
                        <Button x:Name="ToggleModeButton"
                                Margin="10,0,0,0"
                                Style="{DynamicResource DP_IconButtonWithoutBorder}"
                                Content="SwapVertical"
                                Click="ToggleModeButton_Click" />
                    </StackPanel>
                    <StackPanel Margin="10,5"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock Text="Index:"
                                   VerticalAlignment="Center"
                            Margin="0,0,5,0" />
                        <hc:NumericUpDown x:Name="ColorIndexUpDown"
                                          Value="0"
                                          Minimum="0"
                                          Maximum="255"
                                          Width="60"
                                          Margin="0,0,10,0"
                                          ValueChanged="ColorIndexUpDown_ValueChanged" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <!-- Default Colors -->
            <StackPanel Grid.Row="2"
                        Margin="10,5">
                <TextBlock Text="Default Colors"
                           Margin="0,0,0,5" />
                <WrapPanel x:Name="DefaultColorsPanel"
                           Orientation="Horizontal" />
            </StackPanel>
            <!-- Recent Colors -->
            <StackPanel Grid.Row="3"
                        Margin="10,5">
                <TextBlock Text="Recent Colors"
                           Margin="0,0,0,5" />
                <WrapPanel x:Name="RecentColorsPanel"
                           Orientation="Horizontal"
                           Height="30" />
            </StackPanel>
            <!-- Buttons -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10">
                <Button x:Name="ConfirmButton"
                        Content="Confirm"
                        Width="80"
                        Height="30"
                        Margin="5,0"
                        Click="ConfirmButton_Click" />
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="80"
                        Height="30"
                        Margin="5,0"
                        Style="{DynamicResource ButtonDanger}"
                        Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>