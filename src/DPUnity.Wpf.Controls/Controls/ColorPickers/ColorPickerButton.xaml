<UserControl x:Class="DPUnity.Wpf.Controls.Controls.ColorPickers.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="150">
    <Grid>
        <Button x:Name="MainButton"
                Height="32"
                HorizontalAlignment="Stretch"
                Click="MainButton_Click"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Background="{DynamicResource RegionBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Color Rectangle -->
                <Border Grid.Column="0"
                        Width="20"
                        Height="20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        VerticalAlignment="Center">
                    <!-- Checkerboard background for transparency -->
                    <Border.Background>
                        <DrawingBrush Viewport="0,0,4,4"
                                      ViewportUnits="Absolute"
                                      TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="White">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,4,4" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                    <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                        <GeometryDrawing.Geometry>
                                            <GeometryGroup>
                                                <RectangleGeometry Rect="0,0,2,2" />
                                                <RectangleGeometry Rect="2,2,2,2" />
                                            </GeometryGroup>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                    <Rectangle x:Name="ColorRectangle"
                               Fill="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}, Converter={x:Static local:ColorToBrushConverter.Instance}}" />
                </Border>
            </Grid>
        </Button>
        
        <!-- Popup -->
        <Popup x:Name="ColorPickerPopup"
               PlacementTarget="{Binding ElementName=MainButton}"
               Placement="Bottom"
               AllowsTransparency="True"
               StaysOpen="False"
               PopupAnimation="Fade">
            <Border Background="{DynamicResource PopupBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Effect="{DynamicResource EffectShadow2}">
                <local:ColorPicker x:Name="ColorPickerControl"
                                   Width="400"
                                   Height="460"
                                   Confirmed="ColorPicker_Confirmed"
                                   Cancelled="ColorPicker_Cancelled"
                                   ColorChanged="ColorPicker_ColorChanged" />
            </Border>
        </Popup>
    </Grid>
</UserControl>
