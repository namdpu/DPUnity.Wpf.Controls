<UserControl x:Class="DPUnity.Wpf.Controls.Controls.ColorPickers.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="150">
    <Button x:Name="MainButton"
            Height="20"
            HorizontalAlignment="Stretch"
            Click="MainButton_Click"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="14" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Color Rectangle -->
            <Border Grid.Column="0"
                    Width="14"
                    Height="14"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    VerticalAlignment="Center">
                <!-- Checkerboard background for transparency -->
                <Border.Background>
                    <DrawingBrush Viewport="0,0,4,4"
                                  ViewportUnits="Absolute"
                                  TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,4,4" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,2,2" />
                                            <RectangleGeometry Rect="2,2,2,2" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Border.Background>
                <Rectangle x:Name="ColorRectangle"
                           Fill="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}, Converter={x:Static local:ColorToBrushConverter.Instance}}" />
            </Border>
        </Grid>
        
    </Button>
</UserControl>
