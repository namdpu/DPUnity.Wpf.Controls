<UserControl x:Class="DPUnity.Wpf.Controls.Controls.ColorPickers.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="150">
    
    <Button x:Name="MainButton"
            Height="28"
            HorizontalAlignment="Stretch"
            Click="MainButton_Click"
            Cursor="Hand"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Foreground="{DynamicResource SecondaryTextBrush}">
        
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Width" Value="50" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ShowRgbText, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}}" Value="True">
                        <Setter Property="Width" Value="90" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
        
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border x:Name="border"
                        CornerRadius="3"
                        BorderThickness="1"
                        Background="Transparent"
                        Padding="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush"
                                    Value="{DynamicResource BorderBrush}" />
                        </Style>
                    </Border.Style>
                    
                    <!-- Content Panel -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        
                        <!-- Color Rectangle -->
                        <Border Width="14"
                                Height="14"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                            
                            <Rectangle x:Name="ColorRectangle"
                                       Fill="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}, Converter={x:Static local:ColorToBrushConverter.Instance}}" />
                        </Border>
                        
                        <!-- RGB Text -->
                        <TextBlock x:Name="rgbText"
                                   Text="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}, Converter={x:Static local:ColorToRgbStringConverter.Instance}}"
                                   Foreground="{TemplateBinding Foreground}"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowRgbText, RelativeSource={RelativeSource AncestorType=local:ColorPickerButton}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                    </StackPanel>
                </Border>
                
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter TargetName="border"
                                Property="BorderBrush"
                                Value="{DynamicResource PrimaryBrush}" />
                        <Setter TargetName="rgbText"
                                Property="Foreground"
                                Value="{DynamicResource PrimaryBrush}" />
                    </Trigger>
                    <Trigger Property="IsEnabled"
                             Value="False">
                        <Setter Property="Opacity"
                                Value="0.6" />
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
        
    </Button>
</UserControl>
