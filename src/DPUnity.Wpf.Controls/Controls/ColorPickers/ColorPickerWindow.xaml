<Window x:Class="DPUnity.Wpf.Controls.Controls.ColorPickers.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers"
        Title="Color Picker"
        Width="440"
        Height="445"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True">

    <local:ColorPicker x:Name="ColorPickerControl"
                       Confirmed="ColorPicker_Confirmed"
                       Cancelled="ColorPicker_Cancelled"
                       ColorChanged="ColorPicker_ColorChanged" />
</Window>
