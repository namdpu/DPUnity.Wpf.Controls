<UserControl x:Class="DPUnity.Wpf.Controls.Examples.ColorPickerButtonRgbExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DPUnity.Wpf.Controls.Examples"
             xmlns:colorPickers="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="ColorPickerButton RGB Text Examples" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10"/>
        
        <!-- Example 1: With RGB text -->
        <StackPanel Grid.Row="1" Margin="10,5">
            <TextBlock Text="ColorPickerButton with RGB text (ShowRgbText=True, MinWidth=90):" 
                       Margin="0,0,0,5"/>
            <colorPickers:ColorPickerButton x:Name="ColorPickerWithText"
                                            ShowRgbText="True"
                                            SelectedColor="Red"
                                            HorizontalAlignment="Left"/>
        </StackPanel>
        
        <!-- Example 2: Without RGB text -->
        <StackPanel Grid.Row="2" Margin="10,5">
            <TextBlock Text="ColorPickerButton without RGB text (ShowRgbText=False, MinWidth=60):" 
                       Margin="0,0,0,5"/>
            <colorPickers:ColorPickerButton x:Name="ColorPickerWithoutText"
                                            ShowRgbText="False"
                                            SelectedColor="Blue"
                                            HorizontalAlignment="Left"/>
        </StackPanel>
        
        <!-- Example 3: Toggle button -->
        <StackPanel Grid.Row="3" Margin="10,5">
            <TextBlock Text="Toggle RGB text display (MinWidth changes from 60 to 90):" 
                       Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <colorPickers:ColorPickerButton x:Name="ColorPickerToggle"
                                                ShowRgbText="{Binding IsChecked, ElementName=ToggleButton}"
                                                SelectedColor="Green"
                                                Margin="0,0,10,0"/>
                <CheckBox x:Name="ToggleButton" 
                          Content="Show RGB Text"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>