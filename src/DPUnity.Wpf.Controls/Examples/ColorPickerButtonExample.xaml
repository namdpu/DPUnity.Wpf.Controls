<UserControl x:Class="DPUnity.Wpf.Controls.Examples.ColorPickerButtonExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:colorPickers="clr-namespace:DPUnity.Wpf.Controls.Controls.ColorPickers">
    <StackPanel Margin="10">
        <TextBlock Text="ColorPickerButton Examples" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- Normal mode (chỉ hiển thị màu) -->
        <TextBlock Text="Normal mode - Color only:" Margin="0,0,0,5"/>
        <colorPickers:ColorPickerButton x:Name="NormalColorPicker" 
                                        SelectedColor="Red" 
                                        ShowRgbText="False"
                                        Width="30" 
                                        Height="30"
                                        Margin="0,0,0,15"/>
        
        <!-- RGB display mode (hiển thị màu + mã RGB) -->
        <TextBlock Text="RGB display mode - Color with RGB text:" Margin="0,0,0,5"/>
        <colorPickers:ColorPickerButton x:Name="RgbColorPicker" 
                                        SelectedColor="Blue" 
                                        ShowRgbText="True"
                                        Margin="0,0,0,15"/>
        
        <!-- Another example with different color -->
        <TextBlock Text="RGB display mode - Green color:" Margin="0,0,0,5"/>
        <colorPickers:ColorPickerButton x:Name="GreenRgbColorPicker" 
                                        SelectedColor="Green" 
                                        ShowRgbText="True"
                                        Margin="0,0,0,15"/>
    </StackPanel>
</UserControl>